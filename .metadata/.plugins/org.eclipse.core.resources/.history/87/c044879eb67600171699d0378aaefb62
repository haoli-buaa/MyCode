package pdd;
import java.util.Arrays;

public class Solution {
    public int mostKids(int[] w, int[] h){
    	int m = w.length;
    	int n = h.length;
    	//排序;
    	Arrays.sort(h);
    	Arrays.sort(w);
    	//
    	for(int i = n-1; i >= 0; i--){
    		int index = getFirstLeq(w, h[i]);
    		if(index != -1)
    			return Math.min(m-index+1, i+1);
    	}
    	return 0;
    }
    private int getFirstLeq(int[] a, int x){
    	for(int i = 0; i < a.length; i++)
    		if(x >= a[i])
    			return i;
    	return -1;
    }
    public static void main(String[] args){
    	int[] w = {3,8,4,9,4,2,7};
    	int[] h = {1,5,8,10};
    	System.out.println(new Solution().mostKids(w, h));
    }
}