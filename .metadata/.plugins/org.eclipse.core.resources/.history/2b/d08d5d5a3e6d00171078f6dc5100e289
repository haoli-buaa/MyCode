package pdd;

public class Converta2b {
	public int CountSteps(int[] a, int[] b){
		int count = 0;
		for(int i=0; i < a.length; i++){
			if(a[i]>b[i])
				return -1;
			while(b[i]/2 >= a[i] && b[i]%2 == 0){
				count++;
				b[i] /= 2;
			}		
			count += (b[i] - a[i]);	
		}
		return count;
	}
	public static void main(String[] args){
		int[] a = {0,0};
		int[] b = {1,2};
		System.out.println(new Converta2b().CountSteps(a, b));
	}
}
